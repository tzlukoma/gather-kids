{
  "name": "nextn",
  "version": "1.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack -p 9002",
    "dev:seeded": "npm run seed:dev && npm run dev",
    "dev:uat": "./scripts/dev/dev-uat.sh",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:colors": "./scripts/lint-colors.sh",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:email": "playwright test --config=playwright-email.config.ts",
    "test:email:ui": "playwright test --config=playwright-email.config.ts --ui",
    "test:email:magic": "playwright test --config=playwright-email.config.ts registration-auth-flow.spec.ts",
    "test:email:password": "playwright test --config=playwright-email.config.ts email-password-verification.spec.ts",
    "test:e2e:local": "dotenv -e .env.e2e.local -- npx playwright test --config=e2e.config.ts --project=chromium",
    "test:e2e:headed": "dotenv -e .env.e2e.local -- npx playwright test --config=e2e.config.ts --project=chromium --headed",
    "test:e2e:ci": "dotenv -e .env.e2e.ci -- npx playwright test --config=e2e.config.ts --project=chromium",
    "test:e2e:debug": "dotenv -e .env.e2e.local -- npx playwright test --config=e2e.config.ts --project=chromium --debug",
    "gen:types": "node scripts/gen-types.cjs --local",
    "gen:types:prod": "node scripts/gen-types.cjs",
    "seed:scriptures": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/seed/seedScriptures.js",
    "seed:uat": "DOTENV_CONFIG_PATH=.env.uat node -r dotenv/config scripts/seed/uat_seed.js",
    "seed:uat:reset": "DOTENV_CONFIG_PATH=.env.uat RESET=true node -r dotenv/config scripts/seed/uat_seed.js",
    "seed:uat:bible-bee": "DOTENV_CONFIG_PATH=.env.uat node -r dotenv/config scripts/seed/seed_bible_bee_direct.js",
    "seed:uat:full-reset": "npm run seed:uat:reset && npm run seed:uat && npm run seed:uat:bible-bee",
    "seed:uat:full-reset:script": "DOTENV_CONFIG_PATH=.env.uat ./scripts/seed/full_reset_and_seed.sh",
    "seed:uat:fix-and-seed": "./scripts/seed/fix-cycles-and-seed.sh",
    "seed:uat:env:fix-and-seed": "DOTENV_CONFIG_PATH=.env.uat ./scripts/seed/fix-cycles-and-seed.sh",
    "seed:uat:verify-bible-bee": "./scripts/seed/verify-bible-bee-data.sh",
    "seed:uat:dry": "DOTENV_CONFIG_PATH=.env.local DRY_RUN=true node -r dotenv/config scripts/seed/uat_seed.js",
    "seed:uat:reset:dry": "DOTENV_CONFIG_PATH=.env.local RESET=true DRY_RUN=true node -r dotenv/config scripts/seed/uat_seed.js",
    "seed:dev:ministries": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/seed/dev_ministries_seed.js",
    "seed:dev:ministries:dry": "DOTENV_CONFIG_PATH=.env.local DRY_RUN=true node -r dotenv/config scripts/seed/dev_ministries_seed.js",
    "seed:dev": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/seed/dev_seed.js",
    "seed:dev:dry": "DOTENV_CONFIG_PATH=.env.local DRY_RUN=true node -r dotenv/config scripts/seed/dev_seed.js",
    "seed:prod:ministries": "node scripts/seed/prod_ministries.js",
    "seed:prod:ministries:dry": "DRY_RUN=true node scripts/seed/prod_ministries.js",
    "fix:inactive-ministries": "DOTENV_CONFIG_PATH=.env.uat node -r dotenv/config scripts/seed/fix_inactive_ministries.js",
    "import:grab-dexie": "node scripts/import/grabDexieExport.mjs",
    "import:dexie": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/import/importDexie.js",
    "import:dexie:dry": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/import/importDexie.js --dry-run",
    "debug:auth": "node scripts/debug/check-auth-config.js",
    "check:auth-users": "node scripts/check-auth-users.js",
    "debug:auth:uat": "source .env.uat && node scripts/debug/check-auth-config.js",
    "debug:keys": "./scripts/debug/check-supabase-keys.sh",
    "debug:create-registration-cycles": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/debug/create-registration-cycles-table.js",
    "debug:create-registration-cycles:fixed": "DOTENV_CONFIG_PATH=.env.uat node -r dotenv/config scripts/debug/create-registration-cycles-table-fixed.js",
    "debug:generate-sql": "DOTENV_CONFIG_PATH=.env.uat node -r dotenv/config scripts/debug/generate-registration-cycles-sql.js",
    "docs:validate": "bash scripts/validate-docs.sh",
    "docs:dev": "cd doc-site && npm start",
    "docs:build": "cd doc-site && npm run build",
    "docs:serve": "cd doc-site && npm run serve"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.14.1",
    "@genkit-ai/next": "^1.14.1",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@tanstack/react-query": "^4.34.12",
    "@types/nodemailer": "^7.0.1",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "dexie": "^4.0.7",
    "dexie-react-hooks": "^1.1.7",
    "dompurify": "^3.2.6",
    "embla-carousel-react": "^8.6.0",
    "firebase": "^11.9.1",
    "genkit": "^1.14.1",
    "lucide-react": "^0.475.0",
    "next": "15.3.3",
    "node-mailjet": "^6.0.9",
    "nodemailer": "^7.0.6",
    "papaparse": "^5.4.1",
    "patch-package": "^8.0.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^10.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@supabase/supabase-js": "^2.56.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "9.34.0",
    "eslint-config-next": "15.5.2",
    "fake-indexeddb": "^6.2.2",
    "genkit-cli": "^1.14.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8",
    "supabase": "^1.77.9",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2"
  }
}
